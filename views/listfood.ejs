	             x.className += " responsive";
	         } else {
	             x.className = "topnav";
	         }
	      } 
	</script>

<center><h1 class="listpage_h1">List Food Page</h1>
<br>
<br>
</center>
<br>
<table>
<tr>
    <th text-align="center" colspan="9">The details of all available foods with the searched keyword are:</th>
  </tr>
<tr>
                <td><b>Name</b></td>
                <td><b>Typical Values</b></td>
                <td><b>Calories</b></td>
                <td><b>Carbs</b></td>
                <td><b>Fat</b></td>
                <td><b>Protein</b></td>
                <td><b>Salt</b></td>
                <td><b>Sugar</b></td>
                <td><b>Added By</b></td>
            </tr>

            <% availablefoods.forEach(function(food){ %>
            <tr>
                <td><%= food.name %></td>
                <td><%= food.typicalValues%> <%= food.unitTypicalValues %></td>
                <td><%= food.calories %>cal</td>
                <td><%= food.carbs %>g</td>
                <td><%= food.fat %>g</td>
                <td><%= food.protein %>g</td>
                <td><%= food.salt %>g</td>
                <td><%= food.sugar %>g</td>
                <td><%= food.username %></td>
            </tr>
            <%}); %>
</table>


